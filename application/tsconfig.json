{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es5", "es6"],
    "target": "es5",
    "types": ["node"],
    "typeRoots": [ "../node_modules/@types" ],
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
